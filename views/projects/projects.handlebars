<div class="well lecture-section-well">
    <h1>Projects</h1>
</div>

{{#unless course.course_options.has_project}}
    <div class="well lecture-section-well">
        <p>There are no projects for this course</p>
    </div>
{{else}}

    <div class="row group-card">
    {{#each projects}}
        {{#ifEven @index}}
            </div>
            <div class="row">
        {{/ifEven}}
            <div class="col-md-6">
                <div class="well">

                    <h3>
                        <a href="/courses/{{../course.course}}/project/{{this.team_id}}">
                        {{this.project_name}}
                        </a>
                    </h3>

                    <h4>{{this.team_name}}</h4>

                    {{#each this.videos as |video|}}
                        {{#if @first}}
                            <div class="embed-responsive embed-responsive-4by3"
                                 onclick="loadVideo(this, '{{ video.link }}')">
                                <img class="img-responsive" style="cursor: pointer;"
                                     src="http://img.youtube.com/vi/{{ video.link }}/0.jpg"/>
                            </div>
                        {{else}}
                            <h5 style="display: inline-block;"><a
                                    href="https://www.youtube.com/watch?v={{ video.link }}">{{ video.occasion }}</a>
                                {{#unless @last}}
                                    -
                                {{/unless}}
                            </h5>
                        {{/if}}
                    {{/each}}


                    {{#if this.has_extras}}
                        <hr/>
                        {{#each this.extras as |extra|}}
                            <h4><a href="{{ extra.link }}" style="color:#bb0000;">
                                <span class="glyphicon glyphicon-star" style="color:#bb0000;"></span> {{ extra.type }}
                            </a></h4>
                        {{/each}}
                        <hr/>
                    {{/if}}

                    <p>{{ this.description }}</p>


                    <p>
                        Devs:<br/>
                        {{#each this.developers as |member|}}
                            <a href="http://www.acsu.buffalo.edu/~{{ member }}"><span
                                    class="label label-primary">{{ member }}</span></a>
                        {{/each}}&nbsp;
                    </p>
                    <p>
                        TA:<br/>

                        <a href="http://www.acsu.buffalo.edu/~{{ this.ta }}"><span
                                class="label label-info">{{ this.ta }}</span></a> &nbsp;
                    </p>

                    {{#unless this.private}}
                        <hr/>
                        {{#each this.repositories as |repo|}}
                            <h4><a href="{{ repo }}">Source{{@index}}</a></h4>
                        {{/each}}
                    {{/unless}}
                </div>
            </div>
    {{/each}}
    </div>


    <form action="/courses/{{course.course}}/create-project" method="get">
        <div>
            <input type="submit" value="Create Project"/>
        </div>
    </form>
{{/unless}}