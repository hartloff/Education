<div class="well lecture-section-well">
    <h1>{{project.project_name}}</h1>
</div>

<div class="well lecture-section-well">
    <h3>
        <a href="/courses/{{course.course}}/project/{{project.team_id}}">
            {{project.project_name}}
        </a>
    </h3>

    <h4>{{project.team_name}}</h4>

    {{#each project.video_submissions as |video|}}
        {{#if @first}}
            <div class="embed-responsive embed-responsive-4by3"
                 onclick="loadVideo(this, '{{ video.link }}')">
                <img class="img-responsive" style="cursor: pointer;"
                     src="http://img.youtube.com/vi/{{ video.link }}/0.jpg"/>
            </div>
        {{else}}
            <h5 style="display: inline-block;"><a
                    href="https://www.youtube.com/watch?v={{ video.link }}">{{ video.occasion }}</a>
                {{#unless @last}}
                    -
                {{/unless}}
            </h5>
        {{/if}}
    {{/each}}
</div>



{{#if user}}
    <form action="/courses/{{course.course}}/join-team/{{project.team_id}}" method="post">
        <div>
            <input type="submit" value="Join Team"/>
        </div>
    </form>
{{/if}}



<div class="well lecture-section-well">
    {{#each project}}
        <h3>{{@key}}: {{this}}</h3>
    {{/each}}
</div>
