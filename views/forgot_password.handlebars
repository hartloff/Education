{{#if user}}
    <div class="card border-dark mb-3">
        <div class="card-body">
            <h4>Logged in as {{user.username}}</h4>
        </div>
    </div>
{{else}}
    <div class="card border-dark mb-3">
        <div class="card-body">

            <h3>
                Forgot Password
            </h3>
            <p>Enter your @buffalo.edu email address</p>
            <form action="/user/forgot-password" method="post">
                <div>
                    <label>Email:</label><br/>
                    <input type="text" name="email"/>
                </div>
                <br/>
                <div>
                    <input type="submit" value="Submit"/>
                </div>
            </form>

        </div>
    </div>
{{/if}}