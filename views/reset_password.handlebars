{{#if user}}
    <div class="well lecture-section-well">
        <h4>Already logged in. You probably know your password.</h4>
    </div>
{{else}}

    <div class="well lecture-section-well">

        <h3>Set Password</h3><br/>
        <form action="/user/reset-password" method="post">
            <div>
                <label>Set Password</label><br/>
                <input type="password" name="new_password_1"/>
            </div>
            <br/>
            <div>
                <label>Verify Password</label><br/>
                <input type="password" name="new_password_2"/>
            </div>
            <br/>
            <input type="password" name="token" value="{{token}}" hidden/>
            <div>
                <input type="submit" value="Change Password"/>
            </div>
        </form>
    </div>


{{/if}}
